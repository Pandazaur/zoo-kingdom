{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 200,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "preserve"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 120,
        "semi": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none"
      }
    }
  ]
}
